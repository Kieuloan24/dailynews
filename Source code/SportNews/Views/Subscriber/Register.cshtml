@{
    Layout = null;
}
<style>
    .form-register {
        border: 1px solid #ccc;
        width: 500px;
        margin-left: 35%;
    }
</style>

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/registration.css">
</head>
<body>
    @using (Html.BeginForm("Register", "Subscriber", new { ReturnUrl = ""},
            FormMethod.Post, new { @class = "form-register" }))
    {
        <div class="container">
            <h1>Đăng ký tài khoản</h1>
            <p>Vui lòng điền vào mẫu này để tạo một tài khoản.</p>
            <hr>

            <label for="email"><b>Họ tên</b></label>
            <input type="text" placeholder="Nhập họ tên" name="name">

            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Nhập email" name="email">

            <label for="email"><b>Số điện thoại</b></label>
            <input type="text" placeholder="Nhập số điện thoại" name="phone">

            <label for="email"><b>Tài khoản</b></label>
            <input type="text" placeholder="Tài khoản" name="username" required>

            <label for="psw"><b>Mật khẩu</b></label>
            <input type="password" placeholder="Nhập mật khẩu" name="password" required>

            <div class="clearfix">
                <button type="submit" class="signupbtn">Đăng ký</button>
            </div>
        </div>
    }
</body>
</html>

