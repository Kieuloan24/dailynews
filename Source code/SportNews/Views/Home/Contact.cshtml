@model SportNews.Models.Entities.Contact
@{
    ViewBag.Title = "Contact";
}
<section class="contact-section">
    <div class="container">
        <div class="d-none d-sm-block mb-5 pb-4">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.2766195061563!2d105.8532808118482!3d21.02161498794127!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135abec53e372f5%3A0x5d755c1ff4a4a2ee!2zQsOhbyBUdeG7lWkgVHLhursgVGjhu6cgxJDDtA!5e0!3m2!1svi!2s!4v1671133467912!5m2!1svi!2s" width="1280" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Liên hệ</h2>
            </div>
            <div class="col-lg-8">
                @using (Html.BeginForm("SendRequest", "Home", new { @class = "form-contact contact_form" }))
                {
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control valid" name="name" id="name" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Họ tên'" placeholder="Họ tên (*)">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control valid" name="email" id="email" type="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Địa chỉ email'" placeholder="Địa chỉ email (*)">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <textarea class="form-control w-100" name="contents" id="message" cols="30" rows="9" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nhập nội dung'" placeholder="Nhập nội dung"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="button button-contactForm boxed-btn">Gửi</button>
                    </div>
                }
                @*<form class="form-contact contact_form" action="SendRequest" method="post" id="contactForm" novalidate="novalidate">
                </form>*@
            </div>
            <div class="col-lg-3 offset-lg-1">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>19 P. Lý Thường Kiệt, Phan Chu Trinh, Hoàn Kiếm, Hà Nội, Việt Nam</h3>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>+1 253 565 2365</h3>
                        <p>Thứ 2 - 6: 9am to 6pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>support@gmail.com</h3>
                        <p>Gửi yêu cầu</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>