@model IEnumerable<SportNews.Models.Entities.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h2>Danh sách liên hệ</h2>
        <table class="table">
            <tr>
                <th>
                    Họ tên
                </th>
                <th>
                    Email
                </th>
                <th>
                    Nội dung
                </th>
                <th>
                    Ngày tạo
                </th>
                <th>Thao tác</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.contents)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.createddate)
                    </td>
                    <td >
                        <span class="badge bg-success"><a href="/Admin/Contacts/Details/1">Chi tiết</a></span> 
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
