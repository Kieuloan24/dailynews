@model SportNews.Models.Entities.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2 style=" margin-left:20px">Chi tiết</h2>

<div class="card">
    <div class="card-header">
        <h4>Chủ đề : @Html.DisplayFor(model => model.name)</h4>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dd>
                @Html.DisplayFor(model => model.description)
            </dd>

        </dl>
    </div>

</div>
<a href="/Admin/Categories/Edit/@Model.id" class="btn btn-warning" style="margin-left:20px">Chỉnh sửa</a>
<a href="/Admin/Categories/Index" class="btn btn-primary" style="margin-left:20px">Quay lại</a>